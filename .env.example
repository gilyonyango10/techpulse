# ===================================
# Database Configuration
# ===================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=textpulse_db
DB_USER=textpulse_user
DB_PASSWORD=your_secure_password_here

# ===================================
# Authentication & Security
# ===================================
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRES_IN=24h
JWT_COOKIE_EXPIRES=90

# ===================================
# SMS Service Configuration
# ===================================
# Africa's Talking
AFRICASTALKING_USERNAME=your_sandbox_username
AFRICASTALKING_API_KEY=your_api_key
AFRICASTALKING_SENDER_ID=TEXTPULSE

# Twilio (for OTP and 2FA)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ===================================
# OTP Configuration
# ===================================
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=10
OTP_MAX_ATTEMPTS=3

# ===================================
# Server Configuration
# ===================================
PORT=5000
NODE_ENV=development

# ===================================
# Frontend Configuration
# ===================================
CLIENT_URL=http://localhost:3000

# ===================================
# Rate Limiting
# ===================================
RATE_LIMIT_WINDOW_MS=15*60*1000  # 15 minutes
RATE_LIMIT_MAX=100  # Max requests per window

# ===================================
# Session Configuration
# ===================================
SESSION_SECRET=your_session_secret_key

# ===================================
# Email Configuration (for password resets)
# ===================================
# SMTP Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM='TextPulse <noreply@textpulse.com>'

# ===================================
# File Uploads (if applicable)
# ===================================
MAX_FILE_UPLOAD=5 # in MB
